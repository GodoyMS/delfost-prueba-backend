{
   "compilerOptions": {
     "module": "CommonJS" ,
     "lib": ["DOM", "ES2015"],
     "esModuleInterop": true ,
     "resolveJsonModule": true ,
     "moduleResolution": "node" ,
     "target": "ES2015",
     "noImplicitAny": true ,
     "sourceMap": true ,
     "experimentalDecorators": true ,
     "emitDecoratorMetadata": true ,
     "strict": true ,
     "baseUrl": "./" ,
     "outDir": "./dist" ,
     "forceConsistentCasingInFileNames": true,
     "allowSyntheticDefaultImports": true,
     "pretty": true,
     "noUnusedLocals": false,
     "noUnusedParameters": false,
     "plugins": [
       { "transform": "typescript-transform-paths" },
       { "transform": "typescript-transform-paths", "afterDeclarations": true }
     ],
     "paths": {
       "@bootstrap/*": ["src/bootstrap/*"],
       "@configs/*": ["src/configs/*"],
       "@user/*": ["src/features/user/*"],
       "@products/*": ["src/features/products/*"],
       "@orders/*": ["src/features/orders/*"],
       "@interfaces/*": ["src/interfaces/*"],
       "@decorators/*": ["src/shared/decorators/*"],
       "@helpers/*": ["src/shared/helpers/*"],
       "@services/*": ["src/shared/services/*"],
       "@workers/*": ["src/shared/workers/*"],
       "@root/*": ["src/*"]
     }
   },
   "exclude": [
      "node_modules",
      "**/*.d.ts"  // Exclude all declaration files
    ],
   "include": [
     "src/**/*.ts",
     "src/**/*.ejs",

     "test/**/*.ts"


   ] /* te permite incluir en el proceso de compilaci√≥n tu directorio de trabajo donde tienes tus .ts */
 }
